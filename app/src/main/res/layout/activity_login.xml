<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#353956"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    tools:context="com.thc.myapplication.LoginActivity">
    <View
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="后台管理"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/input_bg"
        android:layout_marginTop="20dp"
        >
        <EditText
            android:id="@+id/view_accountName"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="帐号"
            android:textColor="@android:color/white"
            android:textColorHint="#90ffffff"
            android:padding="10dp"
            android:textSize="16sp"
            android:digits="0123456789qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
            />
        <ImageView
            android:id="@+id/view_clear_accountName"
            android:layout_width="50dp"
            android:padding="10dp"
            android:layout_height="match_parent"
            android:src="@mipmap/call_weather_remind_close"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/input_bg"
        android:layout_marginTop="20dp"
        >
        <EditText
            android:id="@+id/view_accountPsw"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="密码"
            android:inputType="textPassword"
            android:textColor="@android:color/white"
            android:textColorHint="#90ffffff"
            android:padding="10dp"
            android:textSize="16sp"
            android:digits="0123456789qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
            />
        <ImageView
            android:id="@+id/view_clear_accountPsw"
            android:layout_width="50dp"
            android:padding="10dp"
            android:layout_height="match_parent"
            android:src="@mipmap/call_weather_remind_close"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/input_bg"
        android:layout_marginTop="20dp"
        >
        <EditText
            android:id="@+id/view_cuthCode_input"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="验证码"
            android:textColor="@android:color/white"
            android:textColorHint="#90ffffff"
            android:padding="10dp"
            android:textSize="16sp"
            android:digits="0123456789qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
            />
        <ImageView
            android:id="@+id/view_clear_authCodeInput"
            android:layout_width="50dp"
            android:padding="10dp"
            android:layout_height="match_parent"
            android:src="@mipmap/call_weather_remind_close"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        >
        <TextView
            android:id="@+id/view_authCode"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="@android:color/white"
            android:textColor="#000000"
            android:text="XHJK"
            android:textSize="20sp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/view_refresh_authCode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:text="看不清?"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:gravity="center"
            />
    </LinearLayout>
    <Button
        android:id="@+id/view_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="登       录"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:background="@drawable/button_bg"
        />

</LinearLayout>
